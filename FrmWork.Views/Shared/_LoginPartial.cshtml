@using res = Zapchast.Framework.Resources;
@using customEntities = Zapchast.Framework.Entities;
@using customManagers = Zapchast.Framework.Managers;
@inject SignInManager<customEntities.User> SignInManager
@inject customManagers.UserManager UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li id="cardInfo">
                @Html.Partial("_CardPartial")
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="@res.Content.txt_ManageAccount">@UserManager.GetUserName(User) <span class="glyphicon glyphicon-cog "></span></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@res.Content.txt_Logout <span class="glyphicon glyphicon-off "></span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li id="cardInfo">
            @Html.Partial("_CardPartial")
        </li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register">@res.Content.txt_Singup</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@res.Content.txt_Singin</a></li>
    </ul>
}
